<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#575757"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/gmarketbold"
        android:gravity="center_horizontal"
        android:text="투신전 많이 사랑해주세요"
        android:textColor="#00B8D4"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <ImageView
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:src="@drawable/trixie"
        />
        <com.lid.lib.LabelButtonView
            android:layout_margin="5dp"
            android:id="@+id/labelbutton2"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_rectangle"
            android:gravity="center"
            android:text="투신전"
            android:textColor="#283593"
            app:label_backgroundColor="#C2185B"
            app:label_distance="20dp"
            app:label_height="20dp"
            app:label_orientation="LEFT_TOP"
            app:label_text="격"
            app:label_textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >


    <ImageView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:clickable="true"
        android:src="@drawable/mish"
        />
        <com.lid.lib.LabelButtonView
            android:layout_margin="5dp"
            android:id="@+id/labelbutton1"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle"
            android:gravity="center"
            android:text="투신전"
            android:layout_gravity="center_horizontal"
            android:textColor="#283593"
            app:label_backgroundColor="#C2185B"
            app:label_distance="20dp"
            app:label_height="20dp"
            app:label_orientation="RIGHT_TOP"
            app:label_text="파"
            app:label_textSize="12sp"
            />
    </LinearLayout>





</LinearLayout>